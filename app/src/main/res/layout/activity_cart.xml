            android:textColor="@color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="302dp"
            tools:layout_editor_absoluteY="270dp" />

        <Button
            android:id="@+id/incBot"
            android:layout_width="54dp"
            android:layout_height="54dp"
