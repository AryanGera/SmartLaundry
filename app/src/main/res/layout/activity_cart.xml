        android:background="@drawable/cust_linear"
        android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textfield"
            android:layout_width="208dp"
            android:layout_height="52dp"
            android:ems="10"
            android:enabled="false"
            android:layout_marginRight="20dp"
            android:inputType="textPersonName"
            android:text="TopWear"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="150dp" />

        <Button
            android:id="@+id/decTop"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/circle"
            android:text="-"
            tools:layout_editor_absoluteX="248dp"
            tools:layout_editor_absoluteY="150dp" />

        <TextView
            android:id="@+id/Top"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="302dp"
            tools:layout_editor_absoluteY="150dp" />

        <Button
            android:id="@+id/incTop"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/circle"
            android:text="+"
            tools:layout_editor_absoluteX="345dp"
            tools:layout_editor_absoluteY="150dp" />

    </LinearLayout>

        <TextView
            android:id="@+id/totTop"
            android:layout_width="152dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:gravity="center"
            tools:layout_editor_absoluteX="247dp"
            tools:layout_editor_absoluteY="204dp"
            android:layout_marginRight="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="208dp"
            android:layout_height="53dp"
            android:text="Total Amount"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="574dp"
            android:layout_marginRight="50dp"/>

        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="242dp"
            tools:layout_editor_absoluteY="574dp" />
    </LinearLayout>

    <Button
        android:id="@+id/addOrder"
        android:layout_width="412dp"
        android:layout_height="61dp"
        android:layout_marginTop="80dp"
        android:text="ADD ORDER"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="666dp" />


</LinearLayout>